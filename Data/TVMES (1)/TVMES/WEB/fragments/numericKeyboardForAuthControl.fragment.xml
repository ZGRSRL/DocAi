<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
    <Dialog id="idAuthControlKeyboardDialog" title="{i18n>OEE_ADMIN_AUTH_ENTER_REG_NO}">
        <content>
            <VBox justifyContent="Center" width="20rem" class="sapUiTinyMargin">
                <HBox justifyContent="Center" width="20rem">
                    <Input id="idAuthControlKeyboardInput" width="19rem" enabled="true" editable="true" textAlign="Center" class="numeric-keyboard-input" />
                </HBox>
                <HBox justifyContent="Center" width="20rem">
                    <Button text="1" press="addNumberToAuthControl" class="numeric-keyboard" width="6rem"/>
                    <Button text="2" press="addNumberToAuthControl" class="numeric-keyboard sapUiTinyMarginBegin" width="6rem"/>
                    <Button text="3" press="addNumberToAuthControl" class="numeric-keyboard sapUiTinyMarginBegin" width="6rem"/>
                </HBox>
                <HBox justifyContent="Center" width="20rem">
                    <Button text="4" press="addNumberToAuthControl" class="numeric-keyboard" width="6rem"/>
                    <Button text="5" press="addNumberToAuthControl" class="numeric-keyboard sapUiTinyMarginBegin" width="6rem"/>
                    <Button text="6" press="addNumberToAuthControl" class="numeric-keyboard sapUiTinyMarginBegin" width="6rem"/>
                </HBox>
                <HBox justifyContent="Center" width="20rem">
                    <Button text="7" press="addNumberToAuthControl" class="numeric-keyboard" width="6rem"/>
                    <Button text="8" press="addNumberToAuthControl" class="numeric-keyboard sapUiTinyMarginBegin" width="6rem"/>
                    <Button text="9" press="addNumberToAuthControl" class="numeric-keyboard sapUiTinyMarginBegin" width="6rem"/>
                </HBox>
                <HBox justifyContent="Center" width="20rem">
                    <Button press="addNumberToAuthControl" type="Reject" icon="sap-icon://nav-back" class="numeric-keyboard" width="12.5rem" />
                    <Button text="0" press="addNumberToAuthControl" class="numeric-keyboard sapUiTinyMarginBegin" width="6rem"/>
                </HBox>
                <HBox justifyContent="Center" width="20rem">
                    <Button text="{i18n>OEE_ADMIN_AUTH_CONFIRM_REG_NO}" press="onPressAuthControlKeyboardSendButton" type="Accept" class="numeric-keyboard" width="9.25rem" />
                    <Button text="{i18n>OEE_BTN_EXIT}" press="onPressAuthControlKeyboardCancelButton" type="Reject" class="numeric-keyboard sapUiTinyMarginBegin" width="9.25rem"/>
                </HBox>
            </VBox>
        </content>
    </Dialog>
</core:FragmentDefinition>